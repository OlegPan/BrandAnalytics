<?xml version="1.0" encoding="UTF-8"?>
<project name="BrandAnalytic" default="all" basedir=".">

    <path id="libs">
            <fileset dir="${lib.dir}" includes="**/*.jar"/>
            <fileset dir="${dist.dir}" includes="**/*.jar"/>
    </path>

    <property name="src.analyzer.dir" location="${project.dir}/searcher/src/"/>
    <pathconvert pathsep=" " property="libs_manifest" refid="libs"/>

    <target name="all">

	<!--class-файлы в папку build/classes-->
        <javac srcdir="${src.analyzer.dir}"
               destdir="${build.dir}/classes"
               debug="true"
               deprecation="true"
               optimize="false"
               includeAntRuntime="false">
            <classpath refid="libs"/>
        </javac>

	<!--собирается архив с классом, у которого есть метод main в папку dist-->
        <jar destfile="${dist.dir}/analyzer.jar" basedir="${classes.dir}" includes="ru/brandanalyst//**/*.*">
            <manifest>
                <attribute name="Built-By" value="analyzer: build.xml"/>
                <attribute name="Class-Path" value="${libs_manifest}/"/>
            </manifest>
        </jar>

        <mkdir dir="${build.dir}/frontend"/>
        <copy todir="${build.dir}/frontend" overwrite="true">
            <fileset dir="${project.dir}/frontend" includes="**/*.*" excludes="**/*.java build.xml *.iml"/>
        </copy>
	<echo>searcher building complete</echo>
    </target>

</project>

